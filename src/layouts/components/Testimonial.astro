---
import TestimonialSlider from "@/layouts/function-components/TestimonialSlider";
const { testimonial } = Astro.props;
---

<section
  class="reviews relative overflow-hidden bg-gradient-to-b from-black to-[#0d0f25] py-20"
>
  <!-- Glow Effect at the back -->
  <div class="testimonial-glow pointer-events-none absolute"></div>

  <!-- Particle Image on top of glow, centered and contained -->
  <img
    src="/images/particles-de1dd20f3008.png"
    alt="Particle background"
    class="pointer-events-none absolute bottom-0 left-1/2 w-[600px] max-w-full -translate-x-1/2 opacity-30"
  />

  <!-- Content on top of everything -->
  <div class="container relative">
    <div class="row justify-between">
      <div class="lg:col-6">
        <h2>{testimonial.title}</h2>
      </div>
      <div class="lg:col-4">
        <p class="text-white/70">
          {testimonial.description}
        </p>
      </div>
    </div>
    <div class="row mt-10">
      <div class="col-12">
        <TestimonialSlider list={testimonial.testimonial_list} client:load />
      </div>
    </div>
  </div>
</section>

<style>
  .testimonial-glow {
    bottom: -150px;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;
    height: 300px;
    background: radial-gradient(
      ellipse at bottom,
      #5049c2 0%,
      rgba(80, 73, 194, 0) 70%
    );
    filter: blur(80px);
    opacity: 0.7;
  }

  .reviews-carousel .swiper-pagination-bullet-active,
  .reviews-carousel .swiper-pagination-bullet-active-main {
    --tw-bg-opacity: 1 !important;
    background-color: white !important;
  }
</style>
